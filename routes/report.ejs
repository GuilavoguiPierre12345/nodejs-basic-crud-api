<html>
    <head>
        <style>
            table {
                font-family: arial, sans-serif;
                width:100%;
                border-collapse:collapse;
            }

            td, th {
                border : 1px solid #dddddd;
                text-align: left;
                padding: 8px;

            }
        </style>
    </head>

    <body>
        <h3 style="text-align:center;">Cafe Management system</h3>
        <table>
            <tr>
                <th>Name : <%= name %> </th>
                <th>Email : <%= email %> </th>
            </tr>
            <tr>
                <th>Contact number : <%= contactNumber %> </th>
                <th>Payment method : <%= paymentMethod %> </th>
            </tr>
        </table>

        <h3 style="text-align:center;">Cafe Management system</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(productDetails.lenght > 0){ %>
                <% productDetails.forEach(product => { %>
                    <tr>
                        <th>
                            <%= product.name %>
                        </th>
                        <th>
                            <%= product.category %>
                        </th>
                        <th>
                            <%= product.quqntity %>
                        </th>
                        <th>
                            <%= product.price %>
                        </th>
                        <th>
                            <%= product.total %>
                        </th>
                    </tr>
                <% }); %>
            <% } %>
        </table>
        <h3>Total : <%= totalAmount %></h3>
        <h3> Thank you  for visting. Please visite agin!</h3>
    </body>
</html>